print('\n----------Binomio de Newton----------')

ene = int(input('Digite el valor de la potencia n: '))
print()


def binomio_de_newton(ene):
    filas = [1]  # lista para almacenar la secuencia, comienza en 1
    valor = ene  # corresponde a la fila enesima

    espacio = "\t".expandtabs(valor + 1)  # expandtabs los caracteres del valor se reemplazan con espacios en blanco
    print("{}{}".format(espacio, filas))  # imprime tablas y el contenido de filas

    for i in range(1, ene):
        longitud = len(filas)  # longitud del numero de filas
        fila = [1]  # lista con valor inicial de 1
        for x in range(0, longitud - 1):
            calc = filas[x] + filas[x + 1]  # calculos para la siguiente fila
            fila.append(calc)  # ponemos el resultado en la nueva fila
        fila.append(1)  # damos el limite de 1 para que se cierre la lista
        espacio = "\t".expandtabs(valor)
        valor -= 1  # decremento en 1 por cada fila del triangulo
        print("{}{}".format(espacio, fila))  # imprime la fila
        filas = fila

    print('\nEl vertor de la fila n', ene, 'es:', filas)
